var Numb = parseInt(thisComp.name.split("_")[1]);  
seedRandom(Numb, true);

var balance = 0;
var slider = {Link slider here}

if((Numb/10) >= 1){
balance = .1 + slider ;
} else { balance = Numb/10;
}

R= random(1);
G= random(1);
B= balance;

[R,G,B,1];

